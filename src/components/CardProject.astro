---
// CardProject.astro
import Card from "./Card.astro";

const { quantity, project } = Astro.props;
const list = Array.isArray(project) ? project.filter(Boolean) : [];
const limitedProjects = quantity ? list.slice(0, quantity) : list;
---

<ul role="list" class="card-project | d-grid">
  {limitedProjects.map((project) => <Card project={project} />)}
</ul>
