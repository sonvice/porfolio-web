---
// CardProject.astro
import Card from "./Card.astro";

const { quantity, project } = Astro.props;
const limitedProjects = quantity ? project.slice(0, quantity) : project;
---

<ul role="list" class="card-project | d-grid">
  {
    limitedProjects.map((project) => (
      <Card project={project} />
    ))
  }
</ul>
