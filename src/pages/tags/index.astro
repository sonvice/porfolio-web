---
import Tag from "../../components/Tag.astro";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");

const tags = posts.map((tag) => [...tag.data.tags]);
const allTags = [...new Set(tags.flat())];
---

<Layout title="Tags" canonical="/tags">
  <div class="container">

    <h1>Tags</h1>
    <ul role="list" class="tag-block | d-flex mt-space-2xs">
      {
        allTags.map((data ) => {
          return (
          <Tag tag={data} />
          );
        })
      }
    </ul>
  </div>
</Layout>
